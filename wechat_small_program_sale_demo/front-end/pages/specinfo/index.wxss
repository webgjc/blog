/* pages/specinfo/index.wxss */
.container{
    padding: 0px;
    margin: 0px;
}
.lb{
    height:400rpx;
    width:100%;
    box-shadow: 3px 3px 3px #e0e0e0;
}
.slide-image{
  width:100%;
  height:100%;
}
.lbt{
    height: 100%;
}
.name,.sub,.sel,.discuss{
    width: 100%;
    float: left;
    margin-top: 30rpx;
    padding-bottom: 35rpx;
    font-size: 1.2rem;
    font-weight: 600;
    border-bottom: solid 1px #e0e0e0;
}
.subr{
    margin:0 30rpx;
}
.wpname{
    margin-left: 30rpx;
}
.subtext{
    font-size: 1.2rem;
    font-weight: 100;
    margin-left: 10rpx;
}
.alldis{
    width: 100%;
}
.foot{
    height: 80rpx;
    width: 100%;
}
.discuss{
    border-bottom: none;
}
.discuss text{
    margin-left: 30rpx;
}
.clsel{
    font-weight: 100;
    font-size: 14px;
    border: solid 1px #ccc;
    padding: 10rpx;
    border-radius: 20rpx;
}
.selx{
    width: 100%;
    text-align: center;
    background-color: #fff;
    position: fixed;
    bottom: 0px;
}
.username{
    margin-left: 30rpx;
}
.time{
    float: right;
    margin-right: 30rpx;
}
.discontain{
    color: #737373;
    margin: 50rpx;
    border-bottom: solid 1px #ccc;
    padding-bottom: 50rpx;
}
.buy{
    background-color: red;
    position: fixed;
    bottom: 0px;
    width: 100%;
    height: 130rpx;
}
.btnl,.btnr{
    display: inline-block;
    width: 49%;
    text-align: center;
    height: 100%;
    line-height: 130rpx;
    color: #fff;
    font-size: 16px;
    font-weight: 400;
}
.btnl{
    border-right: solid 1px #fff;
}
.price{
    margin-left: 30rpx;
}