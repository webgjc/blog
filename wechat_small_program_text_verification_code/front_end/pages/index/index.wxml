<view class="container">
  <form bindsubmit="formSubmit" bindreset="formReset">
    <view class="section">
      <input placeholder="请输入想说的话" auto-focus name="input"/>
    </view>
    <view class='btn'>
      <button formType="submit">提交</button>
    </view>
  </form>
  <view class="img">
    <image src="{{imgurl}}" bindtap="ch"></image>
  </view>
</view>
